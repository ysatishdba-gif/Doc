"""
Configuration management for Clinical Intent Extraction API.
"""

import os
from dataclasses import dataclass


@dataclass
class Config:
    """Application configuration."""
    
    # GCP Settings
    GCP_PROJECT_ID: str = os.getenv("GCP_PROJECT_ID", "your-project-id")
    GCP_LOCATION: str = os.getenv("GCP_LOCATION", "us-central1")
    
    # Model Settings
    MODEL_VERSION: str = os.getenv("MODEL_VERSION", "gemini-2.0-flash-001")
    MODEL_TEMPERATURE: float = 0.0
    MODEL_MAX_TOKENS: int = 8096
    MODEL_TOP_P: float = 1.0
    MODEL_TOP_K: int = 1
    MODEL_SEED: int = 43
    
    # API Settings
    API_HOST: str = os.getenv("API_HOST", "0.0.0.0")
    API_PORT: int = int(os.getenv("API_PORT", "8000"))
    DEBUG: bool = os.getenv("DEBUG", "false").lower() == "true"
    
    # Logging
    LOG_LEVEL: str = os.getenv("LOG_LEVEL", "INFO")
    LOG_FILE: str = os.getenv("LOG_FILE", "logs/app.log")
    
    # Prompt Versions
    QUERY_EXPANSION_PROMPT_VERSION: str = "1.0.0"
    INTENT_EXTRACTION_PROMPT_VERSION: str = "1.0.0"


config = Config()
